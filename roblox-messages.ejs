<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <title>Roblox Messages</title>
  <link rel="stylesheet" href="/style.css">
</head>
<body>
  <h1>Roblox Messages</h1>
  <button onclick="location.href='/'">Back to Home</button>
  <button onclick="toggleDarkMode()">Toggle Dark Mode</button>

  <div id="messages">
    <h2>Received Messages</h2>
    <ul>
      <% messages.forEach(function(message) { %>
        <li><%= message.user %>: <%= message.message %></li>
      <% }) %>
    </ul>

    <h2>Replies</h2>
    <ul>
      <% replies.forEach(function(reply) { %>
        <li><%= reply.user %>: <%= reply.reply %></li>
      <% }) %>
    </ul>
  </div>

  <script>
    function toggleDarkMode() {
      const currentMode = document.cookie.replace(/(?:(?:^|.*;\s*)darkMode\s*\=\s*([^;]*).*$)|^.*$/, "$1");
      document.cookie = "darkMode=" + (currentMode === "true" ? "false" : "true") + "; path=/";
      location.reload();
    }

    function applyDarkMode() {
      const darkMode = document.cookie.replace(/(?:(?:^|.*;\s*)darkMode\s*\=\s*([^;]*).*$)|^.*$/, "$1") === "true";
      if (darkMode) {
        document.body.classList.add('dark-mode');
      }
    }

    applyDarkMode();
  </script>
</body>
</html>
